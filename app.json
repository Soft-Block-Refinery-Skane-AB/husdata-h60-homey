{
	"id": "se.husdata",
	"version": "1.0.0",
	"compatibility": ">=2.5.0",
	"sdk": 2,
	"name": {
		"en": "Husdata"
	},
	"description": {
		"en": "Husdata heat pump gateway"
	},
	"category": [
		"climate"
	],
	"permissions": [],
		"images": {
		"large": "/assets/images/large.png",
		"small": "/assets/images/small.png"
	},
	"author": {
		"name": "Peter Hansson",
		"email": "homey@husdata.se",
		"website": "https://husdata.se/"
	},
	"contributors" : {
    "developers" : [
      {
        "name": "Peter Hansson",
		"email": "homey@husdata.se"
	  },
      {
	  	"name": "Jelger Haanstra",
		"email": "homey@solidewebservices.com"
	  }     
    ]
  },
  	"discovery": {
		"H60": {
				"type": "mdns-sd",
				"mdns-sd": {
						"name": "http",
						"protocol": "tcp"
						},
				"id": "{{host}}",
				"conditions": [
					[
						{
							"field": "host",
							"match": {
								"type": "regex",
								"value": "^h60"
							}
						}
					]
				]
		}
		
	},
  	"capabilities": {
			"HEAT_CARRIER_FORWARD_TEMP": {  
				"type": "number",
				"title": {
					"en": "Heat forward"
				},
				"getable": true,
				"setable": false,
				"units": {
					"en": "C"
				},
				"uiComponent": "sensor",
				"icon": "/assets/iconTemp.svg"
			},
			"HEAT_CARRIER_RETURN_TEMP": {  
