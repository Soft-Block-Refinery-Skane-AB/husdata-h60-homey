	"drivers": [
		{		"id": "H60",
				"discovery": "H60",
				"name": {
					"en": "H60"
				},
				"images": {
					"large": "drivers/H60/assets/images/large.jpg",
					"small": "drivers/H60/assets/images/small.jpg"
				},
				"class": "socket",
				"capabilities": [
				    "INDOOR_TEMP",				"ROOM_SET_TEMP",
					"OUTDOOR_TEMP",				"WARM_WATER_TEMP",
					"SUM_ALARM_STATE",			"ADDITIONAL_HEATER_POWER",
					"RADIATOR_FORWARD_TEMP", 	"RADIATOR_RETURN_TEMP",
					"HEAT_CARRIER_RETURN_TEMP",	"HEAT_CARRIER_FORWARD_TEMP",
					"BRINE_IN_TEMP",			"BRINE_OUT_TEMP",
					"COMPRESSOR_STATE",			"SWITCH_VALVE_STATE",
					
					"target_temperature"
								
					
				],
				"capabilitiesOptions": {
						"target_temperature":  {
							"title": {
								"en": "Indoor temperature"
							}
						}
						
					
        },
				"pair": [
					{
					"id": "list_devices",
					"template": "list_devices",
					"options": {
						"singular": true
						},
					"navigation": {
						"next": "add_device" 
						}
					},
					{
						"id": "add_device"
					}
				],
	  
				"settings": [
					{
						"type": "group",
						"label": {
							"en": "H60 settings"
						},
						"children": [
							{
								"id": "address",
								"type": "text",
								"value": "0.0.0.0",
								"label": {
									"en": "IP Address"
								}
							},
							
							{	
								"id": "polling",
								"type": "number",
								"value": 5,
								"attr": {
									"min": 5,
									"max": 3600
								},
							"label": {
								"en": "Polling Frequency"
								}
							}
							
							
						
						
					]
				}
			]
		}

    ],  
	
	
    "flow": {
       "triggers": [
			

        {
  				"id": "outdoor_temp_changed",
  				"title": {
  					"en": "Outdoor temperature changed"
  				},
				"tokens": [
					{
					"name": "temperature",
					"type": "number",
					"title": {
						"en": "Temperature"
					},
					"example": {
					"en": "5"
                      }
					}
				],
				"args": [
  					{
  					"name": "device",
  					"type": "device",
  					"placeholder": {
  						"en": "Select device"
					},
					"filter": "driver_id=H60"
  					}
  				]
  			},
			{
			"id": "indoor_temp_changed",
  				"title": {
  					"en": "Indoor temperature changed"
  				},
				"tokens": [
					{
					"name": "temperature",
					"type": "number",
					"title": {
						"en": "Temperature"
					},
					"example": {
					"en": "5"
                      }
					}
				],
				"args": [
  					{
  					"name": "device",
  					"type": "device",
  					"placeholder": {
  						"en": "Select device"
					},
					"filter": "driver_id=H60"
  					}
  				]
  			},
			{
			"id": "warm_water_temp_changed",
  				"title": {
  					"en": "Warm water temperature changed"
  				},
				"tokens": [
					{
					"name": "temperature",
					"type": "number",
					"title": {
						"en": "Temperature"
					},
					"example": {
					"en": "5"
                      }
					}
				],
				"args": [
  					{
  					"name": "device",
  					"type": "device",
  					"placeholder": {
  						"en": "Select device"
					},
					"filter": "driver_id=H60"
  					}
  				]
  			},
			{
			"id": "alarm_state_changed",
  				"title": {
  					"en": "Pump alarm state changed"
  				},
				"tokens": [
					{
					"name": "state",
					"type": "number",
					"title": {
						"en": "Alarm state"
					},
					"example": {
					"en": "5"
                      }
					}
				],
				"args": [
  					{
  					"name": "device",
  					"type": "device",
  					"placeholder": {
  						"en": "Select device"
					},
					"filter": "driver_id=H60"
  					}
  				]
  			},
						{
			"id": "switch_valve_state_changed",
  				"title": {
  					"en": "Switch valve state changed"
  				},
				"tokens": [
					{
					"name": "state",
					"type": "number",
					"title": {
						"en": "Switch valve state"
					},
					"example": {
					"en": "5"
                      }
					}
				],
				"args": [
  					{
  					"name": "device",
  					"type": "device",
  					"placeholder": {
  						"en": "Select device"
					},
					"filter": "driver_id=H60"
  					}
  				]
  			},
			{
  				"id": "additional_heat_changed",
  				"title": {
  					"en": "Additional heat changed"
  				},
				"tokens": [
					{
					"name": "power",
					"type": "number",
					"title": {
						"en": "Power"
					},
					"example": {
					"en": "5"
                      }
					}
				],
				"args": [
  					{
  					"name": "device",
  					"type": "device",
  					"placeholder": {
  						"en": "Select device"
					},
					"filter": "driver_id=H60"
  					}
  				]
  			}

			
		],
		"conditions": [
			{
			"id": "Compressor running",
			"title": {
					"en": "Compressor !{{is|isn't}} on"
				}
			},
			{
			"id": "raining_in",
			"title": {
					"en": "It's going to rain in..."
			},
			"titleFormatted": {
					"en": "It !{{is|isn't}} going to rain in [[when]]"
			},
			"args": [
				{
				"name": "when",
				"type": "dropdown",
				"values": [
					{
					"id": "5",
					"label": {
						"en": "5 minutes"
					}
				},
				{
					"id": "10",
					"label": {
					"en": "10 minutes"
				}
				},
				{
					"id": "15",
					"label": {
					"en": "15 minutes"
				}
            }
          ]
        }
      ]
    }
  ],
  "actions": [
    {
      "id": "stop_raining",
      "title": {
        "en": "Make it stop raining. Haha."
      }
    }
  ]
 }
}