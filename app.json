				"title": {
					"en": "Heat return"
				},
				"getable": true,
				"setable": false,
				"units": {
					"en": "C"
				},
				"uiComponent": "sensor",
				"icon": "/assets/iconTemp.svg"
			},			
			"RADIATOR_RETURN_TEMP": {  
				"type": "number",
				"title": {
					"en": "Radiator return"
